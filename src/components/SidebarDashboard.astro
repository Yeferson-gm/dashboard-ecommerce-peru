</div>
</aside>
<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const staticButton = document.getElementById('staticButton');
    const dashButton = document.getElementById('dashButton');
    const ordersButton = document.getElementById('ordersButton');
    const clientsButton = document.getElementById('clientsButton');
    const configButton = document.getElementById('configButton');
    const sunatButton = document.getElementById('sunatButton');
    const allProductsButton = document.getElementById('allProductsButton');
    const newProductButton = document.getElementById('newProductButton');
    const categoriesButton = document.getElementById('categoriesButton');
    const sneakersButton = document.getElementById('sneakersButton');
    const clothesButton = document.getElementById('clothesButton');
    const sweatersButton = document.getElementById('sweatersButton');

    staticButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Statics');
      }
      document.querySelectorAll('#sidebar a, #sidebar button').forEach(el => {
        el.classList.remove('bg-gray-100', 'dark:bg-gray-700');
      });
      staticButton.classList.add('bg-gray-100', 'dark:bg-gray-700');
    });

    dashButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Home');
      }
      document.querySelectorAll('#sidebar a, #sidebar button').forEach(el => {
        el.classList.remove('bg-gray-100', 'dark:bg-gray-700');
      });
      dashButton.classList.add('bg-gray-100', 'dark:bg-gray-700');
    });

    ordersButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Orders');
