      });
      newProductButton.classList.add('bg-gray-100', 'dark:bg-gray-700');
    });
    categoriesButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Categories');
      }
      document.querySelectorAll('#sidebar a, #sidebar button').forEach(el => {
        el.classList.remove('bg-gray-100', 'dark:bg-gray-700');
      });
      categoriesButton.classList.add('bg-gray-100', 'dark:bg-gray-700');
    });
    sneakersButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Sneakers');
      }
      document.querySelectorAll('#sidebar a, #sidebar button').forEach(el => {
        el.classList.remove('bg-gray-100', 'dark:bg-gray-700');
      });
      sneakersButton.classList.add('bg-gray-100', 'dark:bg-gray-700');
    });
    clothesButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Clothes');
      }
      document.querySelectorAll('#sidebar a, #sidebar button').forEach(el => {
        el.classList.remove('bg-gray-100', 'dark:bg-gray-700');
      });
      clothesButton.classList.add('bg-gray-100', 'dark:bg-gray-700');
    });
    sweatersButton.addEventListener('click', () => {
      if (window.changeDynamicComponent) {
        window.changeDynamicComponent('Sweaters');
      }
      document.querySelectorAll('#sidebar a, #sidebar button').forEach(el => {
        el.classList.remove('bg-gray-100', 'dark:bg-gray-700');
